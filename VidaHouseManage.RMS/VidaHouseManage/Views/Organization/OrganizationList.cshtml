
@{
    ViewBag.Title = "组织管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section headers
{
    <link href="~/Content/reset.css" rel="stylesheet" />
    <link href="~/Content/jquery-confirm.css" rel="stylesheet" />
    <link href="~/css/treeResource.css" rel="stylesheet" />
    <link href="~/Content/jstree/style.min.css" rel="stylesheet" />
    <link href="~/css/popUp.css" rel="stylesheet" />
}

<div class="left_nav">
    <div class="logo">
        <img src="/images/logo.png" alt="">
    </div>
    <ul class="nav_list">
        <li>
            <i></i>
            <span><a href="/Products/Index">物品</a></span>
            <div class="activeArrow"></div>
        </li>
        <li>
            <i></i>
            <span><a href="/Materials/Index">材质</a></span>
            <div class="activeArrow"></div>
        </li>
        <li>
            <i></i>
            <span><a href="/Schemes/Index">方案</a></span>
            <div class="activeArrow"></div>
        </li>
        <li>
            <i></i>
            <span><a href="/Upload/Index">资源</a></span>
            <div class="activeArrow"></div>
        </li>

        <li class="currentActive">
            <i></i>
            <span><a href="/Organization/OrganizationList">组织</a></span>
            <div class="activeArrow"></div>
        </li>

        <li>
            <i></i>
            <span><a href="/Member/MemberList">成员</a></span>
            <div class="activeArrow"></div>
        </li>

    </ul>
</div>

<div class="right_content">
    <div class="top">
        <span>后台登录系统</span>
        <a href="/Account/LogOff">注销</a>
        <div class="user">
            <i></i>
            <span>@Session["UserName"].ToString()</span>
        </div>
    </div>

    <div class="categoryTreeBox managePart">

        <div class="tree_list" style="font-size:13px">
            <div id="treeview" class="treeview" style="overflow:auto;vertical-align:top"></div>
        </div>

    </div>

    <div class="menuBar">
        <div class="CategoryInfo"> <i></i>角色列表</div>

        <div class="addMembersBtn" id="add_Role" data-toggle="modal" data-target="#myModal"><i></i>添加角色</div>
    </div>

    <div class="content_lists">
        <input type="hidden" id="hide_selOrgnization" />
        <div class="ul_box">

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>角色名称</th>
                        <th>
                            角色描述
                        </th>

                        <th>操作</th>
                    </tr>
                </thead>
                <tbody id="organizationList"></tbody>
            </table>

        </div>
        <div class="footer">
            <span>@DateTime.Now.Year --Matrix Admin. Brought to you by alpha</span>
        </div>
    </div>

    <div id="myModal" class="modal fade" tabindex="-1" role="dialog">

        <div class="modal-dialog" role="document">
            <div class="modal-content managePopUp">
                <div class="modal-header">
                    <div type="button" class="closeBtn" data-dismiss="modal" aria-label="Close"><img src="~/images/closeBtn.png" alt=""></div>
                    <h4 class="modal-title">角色管理</h4>
                </div>
                <div class="modal-body">
                    <div class="contentL">
                        <ul>
                            <li>
                                <span>角色名称</span>
                                <input name="roleName" id="txt_roleName" />
                                <span class="errorTip"></span>
                            </li>
                            <li>
                                <span>角色描述</span>
                                <textarea class="orgInfo" name="roleDes" id="txt_roleDes" placeholder="最多不超过500字"></textarea>
                            </li>
                        </ul>
                    </div>
                    <div class="contentR">
                        <ul id="authList"></ul>
                    </div>
                </div>

                <div class="submitBtn">提交</div>

            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->

    </div>

    <div id="myOrganization" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content managePopUp">
                <div class="modal-header">
                    <div type="button" class="closeBtn" data-dismiss="modal" aria-label="Close"><img src="~/images/closeBtn.png" alt=""></div>
                    <h4 class="modal-title">组织管理</h4>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="hid_organizationId" />
                    <div class="organizationBox">
                        <ul>
                            <li>
                                <span>组织名称</span>
                                <input name="organizationName" id="txt_organizationName" />
                                <span class="errorTip"></span>
                            </li>
                            <li>
                                <span>组织描述</span>
                                <textarea class="orgInfo" name="organizationDes" id="txt_organizationDes" placeholder="最多不超过500字"></textarea>
                            </li>

                        </ul>
                    </div>


                </div>

                <div class="submitBtn">提交</div>

            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div>

</div>

@section footers{

    <script src="~/Scripts/jquery-confirm.js"></script>
    <script src="~/Scripts/jquery.alerts.js"></script>
    <script src="~/Scripts/jstree/jstree.js"></script>
    <script src="~/Scripts/organization/organization.js"></script>
    <script src="~/Scripts/organization/organization_common.js"></script>

}


